<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_margin="@dimen/empr_between_layout"
    android:elevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/empr_between_layout"
                android:paddingBottom="@dimen/empr_between_layout"
                android:weightSum="2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:id="@+id/employer_logo"
                    android:layout_weight="1.2"
                    android:src="@drawable/jobready365logo"
                    android:layout_marginLeft="@dimen/empr_between_layout"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/empr_between_layout"
                    android:layout_weight="0.9">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="job type"
                        android:id="@+id/jobType"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"

                        android:text="Company_Name"
                        android:textColor="#50B748"
                        android:id="@+id/companyName"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Location"
                        android:textColor="#50B748"
                        android:id="@+id/companyLocation"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!--<Button-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:text="Detail"-->
                    <!--android:background="@drawable/btn_empr_next"-->
                    <!--android:id="@+id/empr_can_detail"-->
                    <!--android:layout_gravity="bottom"-->
                    <!--android:layout_weight="1.2"/>-->
            </LinearLayout>
        </RelativeLayout>
</android.support.v7.widget.CardView>
