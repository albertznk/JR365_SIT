<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/cv_em_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cv_photo_up"/>
        <TextView
            android:text="Add Photo"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_above="@+id/reg_FullName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp" />
        <ImageView
            android:id="@+id/no_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/reg_FullName"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <EditText
            android:id="@+id/reg_FullName"
            android:hint="Full Name"
            android:layout_below="@+id/cv_em_photo"
            style="@style/cv_regist"/>
        <EditText
            android:id="@+id/reg_NRCno"
            android:hint="NRC N0"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_FullName"/>
        <TextView
            android:id="@+id/reg_BirthDate"
            android:hint="BirthDate"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_NRCno"/>
        <EditText
            android:id="@+id/reg_FatherName"
            android:hint="Father Name"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_BirthDate"/>
        <TextView
            android:id="@+id/reg_Religion"
            android:hint="Religion"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_FatherName"/>
        <TextView
            android:id="@+id/reg_MaritalStatus"
            android:text="Marital Status"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_Religion"/>
        <EditText
            android:id="@+id/reg_CurrentPosition"
            android:hint="Current Position"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_MaritalStatus"/>
        <EditText
            android:id="@+id/reg_DesirePosition"
            android:hint="Desire Position"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_CurrentPosition"/>
        <RadioGroup
            android:id="@+id/reg_DriverLicence"
            android:layout_below="@+id/reg_DesirePosition"
            style="@style/cv_regist"
            android:orientation="horizontal">
            <TextView
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center"
                android:text="Driving Licence"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="match_parent" />
            <RadioButton
                android:id="@+id/radio_yes"
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />
            <RadioButton
                android:text="No"
                android:id="@+id/radio_no"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />
        </RadioGroup>
        <EditText
            android:id="@+id/reg_ContactNo"
            android:hint="Contact No"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_DriverLicence"/>
        <EditText
            android:id="@+id/reg_Mail"
            android:hint="Mail"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_ContactNo"/>
        <TextView
            android:id="@+id/reg_StateDivision"
            android:text="State/Division"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_Mail"/>
        <TextView
            android:id="@+id/reg_Township"
            android:hint="Township"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_StateDivision"/>
        <EditText
            android:id="@+id/reg_Street"
            android:hint="Street"
            style="@style/cv_regist"
            android:layout_below="@id/reg_Township"/>
        <EditText
            android:id="@+id/reg_Education"
            android:hint="Education"
            style="@style/cv_regist"
            android:layout_below="@id/reg_Street"/>
        <EditText
            android:id="@+id/reg_Qualificaiotn"
            android:hint="Other Qualification / Certificate"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_Education"/>
        <EditText
            android:id="@+id/reg_Work_Experience"
            android:gravity="top"
            android:hint="Work Experience"
            style="@style/cv_regist"
            android:layout_below="@+id/reg_Qualificaiotn"/>
        <Button
            android:id="@+id/submit_c"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Submit"
            android:layout_width="80dp"
            android:layout_height="40dp" />
    </RelativeLayout>
</ScrollView>
