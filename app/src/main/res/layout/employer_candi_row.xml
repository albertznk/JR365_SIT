<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/jobseekerPhoto"
        android:layout_width="90dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/empe_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/jobseekerPhoto"
        android:gravity="center_vertical"
        android:text="name"
        android:textColor="#000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/empe_phone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/empe_name"
        android:layout_toRightOf="@id/jobseekerPhoto"
        android:gravity="center_vertical"
        android:text="0889y8y8y89899"
        android:textColor="#000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/empe_email"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/empe_phone"
        android:layout_toLeftOf="@+id/viewApplicant"
        android:layout_toRightOf="@id/jobseekerPhoto"
        android:gravity="center_vertical"
        android:text="hello@gmial.com"
        android:textColor="#000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/viewApplicant"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/empe_email"
        android:background="@drawable/btn_green_light"
        android:layout_alignParentRight="true"
        android:text="@string/View"
        android:textAllCaps="false" />
    <View
        android:id="@+id/vvv1"
        android:background="@drawable/tab_background"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"/>
</RelativeLayout>