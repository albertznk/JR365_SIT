<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/employer_logo"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:src="@drawable/true_logo" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/employer_logo"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <View
                android:background="@drawable/dotty"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="7dp"
                />
            <View
                android:background="@drawable/dotty"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="7dp"
                />
            <View
                android:background="@drawable/dotty"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="7dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_toRightOf="@id/employer_logo"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/ApJobTitle"
                style="@style/dash_row_style"
                android:text="job type" />

            <TextView
                android:id="@+id/ApCompanyName"
                style="@style/dash_row_style"
                android:text="Company_Name"
                android:textColor="#50B748" />

            <TextView
                android:id="@+id/ApCompanyAddress"
                style="@style/dash_row_style"
                android:text="Location"
                android:textColor="#50B748" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/view_bar"

        android:layout_alignParentBottom="true" />
</RelativeLayout>